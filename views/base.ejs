
<%- include('header') -%>   
<!-- partials -->
 <!-- Section: Design Block -->
<section class="background-radial-gradient  d-flex justify-content-center" style="height: 100vh;">
    <div class="container px-4 py-5 px-md-5 text-center text-lg-start my-5">
      <div class="row gx-lg-5 d-flex justify-content-center align-items-center mb-5">

  
        <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
          <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
          <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>
  
          <div class="card bg-glass">
            <div class="card-body  px-4 py-5 px-md-5">
             
              
              <h2 class="text-center login-text">Login Page</h2>

              <form action="/route/login" method="POST">
                
                <!-- Email input -->
                <div class="form-outline mb-4">
                  <label class="form-label text-center" for="form3Example3">User Name</label>

                  <input type="email" id="form3Example3" class="form-control" placeholder="email"  name="email"/>
                </div>
  
                <!-- Password input -->
                <div class="form-outline mb-4">
                  <label class="form-label text-center" for="form3Example4">Password</label>

                  <input type="password" id="form3Example4" placeholder="password" class="form-control" name="password" />
                </div>
                <div id="invalid">
                  <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
                      <p style="color: red;" id="errorMessage"><%= errorMessage %></p>
                  <% } %>
              </div>
              

                <!-- Submit button -->
                <div class="login-btn d-flex  justify-content-center">
                  <button type="submit" class="btn btn-primary  login-btn btn-block mb-4">
                    Login
                  </button>
                 
                </div>
                <div id="logout-success">
                  <% if (locals.logout) { %>
                      <p style="color: rgb(91, 167, 48);" id="logoutMessage"><%= locals.logout %></p>
                  <% } %>
              </div>
  
               
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Section: Design Block -->

    <%-include('footer')-%>

